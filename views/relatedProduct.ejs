<!-- 相關商品 -->
<section class="container mt-3">
    <h2 class="pt-3 related text-center"><strong>相關商品</strong></h2>
    <div class="row">
        <% relatedProducts.forEach(function(relatedProduct) { %>
            <div class="col-6 col-md-4 col-lg-3 ">
                <a id="prodCard-<%= relatedProduct.prod_id %>"
                    href="/product/<%= relatedProduct.prod_id %>/<%= relatedProduct.spec_id %>">
                    <div class="card">
                        <img src="<%= relatedProduct.dir %>/<%= relatedProduct.filename %>" alt="產品圖片"
                            class="w-100 rounded">
                        <div class="ps-3">
                            <h4 class="mt-3"><b>
                                    <%= relatedProduct.prod_name %>
                                </b></h4>
                            <p>
                                <%= relatedProduct.spec_name %>
                            </p>
                            <div class="priceIcon">
                                <span class="mt-lg-4">
                                    NT <%= relatedProduct.price %>
                                </span>
                                <button class="btn btn-lg no-link" id="addtocollect" data-prod_id="<%= relatedProduct.prod_id %>"
                                    data-spec_id="<%= relatedProduct.spec_id %>">
                                    <i class="bi bi-heart"></i>
                                </button>
                                <button class="btn btn-lg no-link" id="addtocart" data-prod_id="<%= relatedProduct.prod_id %>"
                                    data-spec_id="<%= relatedProduct.spec_id %>">
                                    <i class="bi bi-cart-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <% }) %>
    </div>

    <div class="center mt-5 ">
        <div class="pagination">
            <% for(var i=1; i <=4; i++) { %>
                <span><a href="/<%= i%>">
                        <%= i%>
                    </a></span>
                <% } %>
        </div>
    </div>

</section>